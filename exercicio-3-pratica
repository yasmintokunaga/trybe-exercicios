const authorWith3DotsOnName = () => {
  books.forEach((element) => {
    const transformName = element.author.name.split('').map((letter) => letter === '.' ? 1 : 0);
    const sumDuts = transformName.reduce((acc, curr) => acc + curr);
    element.author.dots = sumDuts;    
  });

  const findBook = books.find((book) => book.author.dots === 3);
  return findBook.name;
};

console.log(authorWith3DotsOnName());